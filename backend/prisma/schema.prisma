generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  poems    Poem[]
  comments Comment[]
  likes    Like[]
}

model Poem {
  id         Int       @id @default(autoincrement())
  title      String
  content    String
  likesCount Int       @default(0)
  createdAt  DateTime  @default(now())
  authorId   Int
  author     User      @relation(fields: [authorId], references: [id])
  comments   Comment[]
  likes      Like[]
  genres     PoemGenre[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  text      String
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  poemId    Int
  poem      Poem     @relation(fields: [poemId], references: [id])
}

model Like {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  poemId    Int
  poem      Poem     @relation(fields: [poemId], references: [id])
  @@unique([userId, poemId])
}

model Genre {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  poems     PoemGenre[]
}

model PoemGenre {
  poemId    Int
  poem      Poem      @relation(fields: [poemId], references: [id])
  genreId   Int
  genre     Genre     @relation(fields: [genreId], references: [id])
  @@id([poemId, genreId])
}
